<!-- Vendor JS-->


<script>
    function validateMobileNumber() {
        const Num = document.getElementById('MobileNumber').value;
        const regNum = /^(\+?\d{1,3}[- ]?)?\d{10}$/
        if (!regNum.test(Num)) {
            document.getElementById('NumberErr').innerHTML = 'Invalid Number Please Valid Number';
            return false;
        } else {
            document.getElementById('NumberErr').innerHTML = '';
            return true;
        }
    }
    function validatePassword() {
        const Password = document.getElementById('Password').value;
        const regPass = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}$/;;
        if (!regPass.test(Password)) {
            document.getElementById('PasswordErr').innerHTML = 'Invalid Password Please Ender Valid password';
            return false;
        } else {
            document.getElementById('PasswordErr').innerHTML = "";
            return true;
        }
    }
    function validateSubmit() {
        if (!validateMobileNumber() || !validatePassword()) {
            document.getElementById('loginErr').innerHTML = 'Error Submiting Fill All Fields'
            return false
        } else {
            document.getElementById('login').submit()
            return true
        }
    }
</script>