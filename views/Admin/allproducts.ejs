<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<section class="content-main">
    <div class="content-header">
<div class="container">
<div class="content-header">
    <div>
        <h2 class="content-title card-title">All Products </h2>
    </div>
<div>
    <a href="/admin/addproducts">
<button class="btn btn-sm btn-success" >ADD Products</button>
</a>
</div>
</div>
<div class="card mb-4">


    <div class="table-responsive">
        <div class="mt-15">

        </div>
        <table class="table table-hover" id="myTable">

            <thead>
                <tr>
                    <th>#ID</th>
                    <th scope="col">Title</th>
                    <th scope="col"> Categories</th>
                    <th scope="col">Discription</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Image</th>
                    <th scope="col">EDIT</th>
                    <th scope="col">Status</th>
                    

                </tr>
            </thead>
            <tbody>
                <% products.forEach((item,index)=>{%>
                    <tr>
                        <td>
                            <%=index+1%>
                        </td>
                        <td>
                            <%=item.productTitle%>
                        </td>
                        <td>
                            <%=item.productCategory%>
                        </td>
                        <td>
                            <%=item.productDescription%>
                        </td>
                        <td>
                            <%=item.productPricing%>
                        </td>
                        <td>
                            <%if (item.productStockStatus){%>
                                <%=item.productQuantity%>
                                    <%}else{%>
                                        <p class="text-danger">Out Of Stoke</p>
                                        <%}%>
                        </td>
                        <td style="vertical-align: middle; padding: 0;"><img
                                src="/images/products_image/<%=item.productimage[0] %>" alt="" style="width: 40px;">
                        </td>
                        <td> <a href="/admin/editproduct/<%= item._id %>"
                                class="btn btn-sm btn-success rounded font-sm">EDIT</a>
                            </td>
                                <td>
                            <%if (item.productStockStatus){%>
                                <a href="/admin/blockproduct/<%= item._id %>"
                                    class="btn btn-sm btn-danger rounded font-sm">.BLOCK.</a>
                                <%}else{%>
                                    <a href="/admin/blockproduct/<%= item._id %>"
                                        class="btn btn-sm btn-success rounded font-sm">unblock</a>
                                    <%}%>

                        </td>


                    </tr>
                    <%})%>

            </tbody>
        </table>
    </div>

</div>
<div class="pagination-area mt-15 mb-50">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">

        </ul>
    </nav>
</div>
</div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });


</script>

